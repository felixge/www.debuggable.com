&nbsp; <span class="co1">//==================================================</span><br />
<br />
&nbsp; <span class="co1">//--------------------------------------------------</span><br />
&nbsp; <span class="kw2">function</span> setPalette<span class="br0">&#40;</span><span class="re0">$bgHex</span>, <span class="re0">$fgHex</span> = <span class="st0">''</span><span class="br0">&#41;</span><br />
