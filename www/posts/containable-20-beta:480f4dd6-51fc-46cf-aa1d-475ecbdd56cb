class ContainableBehavior extends ModelBehavior {</br><br />
    var $runtime = array();</br><br />
    var $reset = true;</br><br />
...</br></p>
<p>    function contain(&amp;$model, $associations = array()) {<br />
    ...</br><br />
            $assocModel-&gt;unbindModel($unbind, $this-&gt;reset);</br><br />
    ...</br><br />
}</br></p>
